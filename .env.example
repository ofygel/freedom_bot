# Required configuration
BOT_TOKEN=your-telegram-bot-token
DATABASE_URL=postgres://user:password@host:5432/database
KASPI_CARD=4000000000000000 # Kaspi Gold card number presented to subscribers.
KASPI_NAME=Your Name # Account holder name shown with the Kaspi payment details.
KASPI_PHONE=+77001234567 # Contact number published alongside Kaspi instructions.

# Optional application settings
NODE_ENV=development
LOG_LEVEL=info
SUB_WARN_HOURS_BEFORE=24
CITY_DEFAULT=Almaty # Default city appended to short address queries (omit to disable).
DATABASE_SSL=false

# Subscription pricing (overrides defaults when provided)
SUB_PRICE_7=5000 # Seven-day subscription price in KZT (defaults to 5000).
SUB_PRICE_15=9000 # Fifteen-day subscription price in KZT (defaults to 9000).
SUB_PRICE_30=16000 # Thirty-day subscription price in KZT (defaults to 16000).

# General tariff hints for automation (must be set together)
TARIFF_BASE=500 # Base fare used by external tariff consumers.
TARIFF_PER_KM=120 # Per-kilometre component for general tariff calculations.
TARIFF_PER_MIN=30 # Per-minute component for general tariff calculations.

# Pricing presets exposed to executors
TAXI_BASE_FARE=700 # Taxi base fare in KZT (defaults to 700 when unset).
TAXI_PER_KM=200 # Taxi per-kilometre rate in KZT (defaults to 200 when unset).
TAXI_MINIMUM_FARE=700 # Taxi minimum fare in KZT (defaults to 700 when unset).
DELIVERY_BASE_FARE=900 # Delivery base fare in KZT (defaults to 900 when unset).
DELIVERY_PER_KM=250 # Delivery per-kilometre rate in KZT (defaults to 250 when unset).
DELIVERY_MINIMUM_FARE=900 # Delivery minimum fare in KZT (defaults to 900 when unset).

# Database client overrides (used by local scripts and migrations)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=freedom_bot
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false
