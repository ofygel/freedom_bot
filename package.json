{
  "name": "freedom_bot",
  "version": "1.1.0",
  "description": "Telegram delivery aggregator bot for Almaty (cleaned & fixed).",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "check": "tsc --noEmit",
    "test": "node --require ts-node/register --test --test-concurrency=1 $(find tests -name '*.test.ts')",
    "migrate": "ts-node db/migrate.ts",
    "backup": "bash db/backup.sh"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "telegraf": "^4.15.0",
    "typegram": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@types/pino": "^7.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
