{
  "name": "freedom_bot",
  "version": "1.1.0",
  "description": "Telegram delivery aggregator bot for Almaty (cleaned & fixed).",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "check": "tsc --noEmit",
    "test": "node --require ts-node/register --test --test-concurrency=1 $(find tests -name '*.test.ts')",
    "backup": "bash db/backup.sh",
    "db:migrate": "dbmate --migrations-dir=db/migrations --wait",
    "ctr:report": "node dist/scripts/ctrReport.js",
    "lint": "eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "@sentry/node": "^7.120.0",
    "@sentry/tracing": "^7.120.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "prom-client": "^15.1.3",
    "telegraf": "^4.15.0",
    "typegram": "^5.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "dbmate": "^2.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-promise": "^6.1.1",
    "pino-pretty": "^13.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
